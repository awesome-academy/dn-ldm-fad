<div class="col-lg-3 col-md-6 mb">
  <div class="card border-0 med-blog">
    <div class="card-header p-0">
      <a href="menu.html">
      <%= link_to nil, href: product_path(product.id) do %>
        <%= image_tag(checked_image(product, :product),
          class: "card-img-bottom") %>
      <% end %>
    </div>
    <div class="card-body border border-top-0">
      <h5 class="blog-title card-title m-0">
        <%= link_to product.name, product_path(product.id) %>
      </h5>
      <p><%= product.category_name %> </p>
      <p><%= product.product_type_name %> </p>
      <p><%= number_to_currency(product.price) %></p>
      <p class="mt-3"><%= product.description %></p>
      <% if product.quantity > Settings.cart.disabled %>
        <%= link_to nil, href: cart_add_path(product.id), method: :post,
          class: "btn button-w3ls mt-4 mb-3" do %>
          <%= t("cart.add") %>
          <span class="fa fa-shopping-cart ml-1" aria-hidden="true"></span>
        <% end %>
      <% else %>
        <%= link_to nil, disabled: "disabled",
          class: "btn button-w3ls mt-4 mb-3" do %>
          <%= t("cart.add") %>
          <span class="fa fa-shopping-cart ml-1" aria-hidden="true"></span>
        <% end %>
      <% end %>
      </a>
    </div>
  </div>
</div>
