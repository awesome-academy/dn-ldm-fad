<%= form_tag(searchs_products_path, method: :get) do %>
  <div>
    <%= label_tag nil, t("admin.categories.category") %><br>
    <% @categories.each do |k, v| %>
      <div class="checkbox">
        <%= label_tag nil, nil do %>
          <%= check_box_tag "category_ids[]", k %>
          <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
          <%= v %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%= label_tag nil, t("admin.product_type.name") %><br>
    <% @product_types.each do |k, v| %>
      <div class="checkbox">
        <%= label_tag nil, nil do %>
          <%= check_box_tag "type_ids[]", k %>
          <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
          <%= v %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%= label_tag nil, t("admin.products.price") %><br>
    <%= select_tag :price, options_for_select(load_select_price),
     {include_blank: t("search.price.name")} %>
  </div><br>
  <%= button_tag t("search.search"), class: "btn-profile" %>
<% end %>
