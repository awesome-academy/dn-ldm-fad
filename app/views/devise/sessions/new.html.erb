<% provide(:title, t("users.login")) %>
<% content_for :page_detail do %>
  <%= render "layouts/page_detail" %>
<% end %>
<div class="login-contect py-5">
  <div class="container py-xl-5 py-3">
    <div class="login-body">
      <div class="login p-4 mx-auto">
        <h5 class="text-center mb-4"><%= t "users.login" %></h5>
        <%= form_for(resource, as: resource_name,
          url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label t("users.email") %><span class="text-require">*</span>
            <%= f.email_field :email, autofocus: true, autocomplete: :email,
              class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label t "users.password" %><span class="text-require">*</span>
            <%= f.password_field :password, autocomplete: "current-password",
              class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label t "users.remember_me" %>
            </div>
          <% end %>
          <div class="actions a">
            <%= f.submit t("users.login"),
              class: "btn a btn-login btn-success form-control" %><br>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
