<% provide(:title, t("users.change_pass")) %>
<% content_for :page_detail do %>
  <%= render "layouts/page_detail" %>
<% end %>
<div class="login-contect py-5">
  <div class="container py-xl-5 py-3">
    <div class="login-body">
      <div class="login p-4 mx-auto">
        <h5 class="text-center mb-4"><%= t "users.forgot_password" %></h5>
        <%= form_for(resource, as: resource_name,
          url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label t("users.email") %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-control" %>
          </div>
          <div class="actions a">
            <%= f.submit t("users.send_mail_rest_pass"),
              class: "btn btn-login form-control btn-danger a" %><br>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
