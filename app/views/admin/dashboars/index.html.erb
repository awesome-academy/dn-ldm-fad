<% provide(:title, t("admin.dashboard")) %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 div-index">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t "admin.home" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-3">
      <div class="panel panel-blue panel-widget ">
        <div class="row no-padding">
          <div class="col-sm-3 col-lg-5 widget-left">
            <span class="glyphicon glyphicon-flag icon-admin"></span>
          </div>
          <div class="col-sm-9 col-lg-7 widget-right">
            <div class="large"><%= @count_product %></div>
            <div class="text-muted">
              <%= t "admin.product", count: @count_product %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      <div class="panel panel-orange panel-widget">
        <div class="row no-padding">
          <div class="col-sm-3 col-lg-5 widget-left">
            <span class="glyphicon glyphicon-list-alt icon-admin"></span>
          </div>
          <div class="col-sm-9 col-lg-7 widget-right">
            <div class="large"><%= @count_category %></div>
            <div class="text-muted">
              <%= t "admin.category", count: @count_category %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      <div class="panel panel-teal panel-widget">
        <div class="row no-padding">
          <div class="col-sm-3 col-lg-5 widget-left">
            <span class="glyphicon glyphicon-user icon-admin"></span>
          </div>
          <div class="col-sm-9 col-lg-7 widget-right">
            <div class="large"><%= @count_user %></div>
            <div class="text-muted">
              <%= t "admin.category", count: @count_user %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      <div class="panel panel-widget">
        <div class="row no-padding">
          <div class="col-sm-3 col-lg-5 widget-left panel-red">
            <span class="glyphicon glyphicon-send icon-admin"></span>
          </div>
          <div class="col-sm-9 col-lg-7 widget-right">
            <div class="large"><%= @count_order %></div>
            <div class="text-muted">
              <%= t "admin.order", count: @count_order %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-red">
        <div class="panel-heading dark-overlay icon-admin">
          <span class="glyphicon glyphicon-calendar"></span>
          <%= t "admin.calendar" %>
        </div>
        <div class="panel-body">
          <div id="calendar"></div>
        </div>
      </div>
    </div>
  </div>
</div>
