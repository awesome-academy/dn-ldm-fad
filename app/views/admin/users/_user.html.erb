<tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= t "users.#{user.sex}" %></td>
  <td><%= user.birthday.strftime(Settings.date_format.vn) %></td>
  <td><%= user.phone %></td>
  <td><%= user.address %></td>
  <td>
    <span class="btn-<%= user.admin? ? "danger" : "info" %> btn-role">
      <%= t "users.#{user.role}" %>
    </span>
  </td>
  <td>
    <li class="dropdown li-option">
      <%= link_to t("users.option"), "#", class: "dropdown-toggle a-opiton",
        data: {toggle: "dropdown"} %>
      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to edit_admin_user_path(user.id) do %>
            <span class="glyphicon glyphicon-pencil"></span>
            <%= t "users.edit" %>
          <% end %>
        </li>
        <li>
          <%= link_to admin_user_path(user.id), method: :delete,
            data: {confirm: t("cart.you_sure")} do %>
            <span class="glyphicon glyphicon-trash"></span>
            <%= t "users.delete" %>
          <% end %>
        </li>
      </ul>
    </li>
  </td>
</tr>
