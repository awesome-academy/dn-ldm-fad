<% provide(:title, t("admin.products.name")) %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 div-category">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t "admin.products.name" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading"><%= t "admin.products.list_products" %>
          <%= link_to t("admin.products.add"), new_admin_product_path,
            class: "btn btn-success" %>
        </div>
        <%= render "layouts/message" %>
        <div class="panel-body">
          <div class="bootstrap-table">
            <div class="table-responsive">
              <div>
                <%= form_tag(search_admin_products_path, method: :get) do %>
                  <%= search_field_tag :search_product, nil,
                    class: "form-control", id: "searchProduct",
                    placeholder: t("admin.products.search") %>
                <% end %>
              </div>
              <table class="table table-bordered product-table">
                <thead>
                  <tr class="bg-default">
                    <th><%= t "admin.products.id" %></th>
                    <th><%= t "admin.products.name_pro" %></th>
                    <th><%= t "admin.products.image" %></th>
                    <th><%= t "admin.products.price" %></th>
                    <th><%= t "admin.products.quantity" %></th>
                    <th><%= t "admin.products.description" %></th>
                    <th><%= t "admin.products.category" %></th>
                    <th><%= t "admin.products.type" %></th>
                    <th><%= t "admin.products.status" %></th>
                    <th><%= t "admin.products.action" %></th>
                  </tr>
                </thead>
                <tbody id="getProduct">
                  <% if @products.any? %>
                    <%= render @products %>
                  <% else %>
                    <tr>
                      <td colspan="10"><%= t "admin.products.not_found" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <div class="div-paginate" ">
                <%= will_paginate %>
              </div>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</div>
