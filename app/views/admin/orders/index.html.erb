<% provide(:title, t("admin.orders.name")) %>
  <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 div-category">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t "admin.orders.name" %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-12 col-lg-12">
        <div class="panel panel-primary">
          <div class="panel-heading"><%= t "admin.orders.list_order" %></div>
          <div class="panel-body">
            <div class="bootstrap-table">
              <div class="table-responsive">
                <%= render "layouts/message" %>
                <div class="search-order">
                  <%= form_tag(search_admin_orders_path, method: :get) do %>
                    <%= search_field_tag :search_order, nil,
                      class: "form-control", id: "searchProduct",
                      placeholder: t("admin.orders.search") %>
                  <% end %>
                </div>
                <div class="form-group div-filter">
                  <%= select_tag :status, options_for_select(load_order_status),
                    {include_blank: t("admin.orders.filter"), id: "orderStatus",
                    class: "form-control", style: "height:34px;"} %>
                </div>
                <table class="table table-bordered">
                  <thead>
                    <tr class="bg-primary">
                      <th><%= t "admin.orders.id" %></th>
                      <th><%= t "admin.orders.customer" %></th>
                      <th><%= t "admin.orders.phone" %></th>
                      <th><%= t "admin.orders.address" %></th>
                      <th><%= t "admin.orders.description" %></th>
                      <th><%= t "admin.orders.created_at" %></th>
                      <th><%= t "admin.orders.status" %></th>
                      <th><%= t "admin.orders.action" %></th>
                    </tr>
                  </thead>
                  <tbody id="getOrder">
                    <% if @orders.any? %>
                      <%= render @orders %>
                    <% else %>
                      <p><%= t "admin.orders.empty" %></p>
                    <% end %>
                  </tbody>
                </table>
                <div class="div-paginate">
                  <%= will_paginate %>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div><!--/.row-->
  </div>  <!--/.main-->
<%= javascript_include_tag "admin/order.js" %>
