<% provide(:title, t("search.search")) %>
<% content_for :page_detail do %>
  <%= render "layouts/page_detail" %>
<% end %>
<% content_for :product do %>
  <% if @products.any? %>
    <section class="blog_w3ls py-5">
      <div class="container pb-xl-5 pb-lg-3">
        <div class="title-section text-center mb-md-5 mb-4">
          <p class="w3ls-title-sub">
            <%= t "search.result", count: @products.count %>
          </p>
          <h3 class="w3ls-title">"<%= @key_search %>"</h3>
        </div>
        <div class="row">
          <%= render partial: "products/product", collection: @products %>
        </div>
        <%= will_paginate @products %>
      </div>
    </section>
  <% else %>
    <div class="container">
      <p><%= t "search.empty" %></p>
    </div>
  <% end %>
<% end %>
